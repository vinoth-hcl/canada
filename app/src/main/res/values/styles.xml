<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash screen title theme -->
    <style name="SplashTitleTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/splash_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Splash screen title theme -->
    <style name="ActionBarTitleTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- List item title theme -->
    <style name="ListTitleTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
        <item name="android:textColor">@color/color_list_item_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- List item description theme -->
    <style name="ListDescriptionTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/list_item_description_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- No content info theme -->
    <style name="NoContentInfoTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/no_content_info_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
